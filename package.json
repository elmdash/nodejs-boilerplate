{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Starter project for nodejs projects",
  "main": "src/main.js",
  "scripts": {
    "lint": "eslint src lib test",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/elmdash/nodejs-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "boilerplate"
  ],
  "author": "Peter Sooley",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/elmdash/nodejs-boilerplate/issues"
  },
  "homepage": "https://github.com/elmdash/nodejs-boilerplate#readme",
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^23.5.0"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "src",
      "lib",
      "test"
    ],
    "testMatch": [
      "**/(src|lib)/**/_test.js",
      "**/test/**/*.test.js"
    ]
  }
}
